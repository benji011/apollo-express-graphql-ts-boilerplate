{
  "dependencies": {
    "apollo-server-express": "^2.21.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "module-alias": "^2.2.2",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.33",
    "add": "^2.0.6",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "yarn": "^1.22.10"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts"
  },
  "scripts": {
    "start": "nodemon",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "_moduleAliases": {
    "~/*": "./src"
  }
}
